      <onLoad><action>if(!getFlag('mekaphelin.signal')){setFlag('mekaphelin.signal',true);}</action><music id="orbit" seconds="1" /><radar tile="orbit.radar" animation="orbit.radar" padding="2" /></onLoad>
    </orbit>
  </planet>
  <area id="mekaphelin.grass.island1" width="150" height="96" background="start" planet="mekaphelin.grass" name="system.planet.mekaphelin.grass">
    <tiles id="sci1.grass" y="0" empty="true" />
    <tiles id="bedrock" y="95" empty="true" />
    <tiles id="sci1.dirt" start="0" end="0.5" empty="true" />
    <tiles id="sci1.stone" start="0.5" end="1" empty="true" />
    <shore x="-1" top="sand_top" bottom="sand" trans1="sci1.dirt_sand1" trans2="sci1.dirt_sand3" flip="true" dock="dock_empty" height="96" />
    <shore x="150" top="sand_top" bottom="sand" trans1="sci1.dirt_sand1" trans2="sci1.dirt_sand3" dock="dock_empty_flip" height="96" />
    <appendArea id="sea_floor"><params area_left="-240" area_right="390" area_width="128" area_height="96" /></appendArea>
    <ore id="coal" start="0.1" end="0.5" percent="0.005" tile="sci1.dirt"/>
    <ore id="iron" start="0.1" end="0.3" percent="0.0075" tile="sci1.dirt" />
    <ore id="diamond" start="0.5" end="0.6" percent="0.0025" tile="sci1.stone" />
    <ore id="gold" start="0.3" end="0.5" percent="0.0125" tile="sci1.stone" />
    <ore id="iron" start="0.3" end="0.6" percent="0.0375" tile="sci1.stone" />
    <ore id="titanium" start="0.7" end="1.0" percent="0.0125" tile="obsidian" />
    <ore id="quartz" start="0.6" end="0.8" percent="0.0175" tile="obsidian" />
    <fishing>
      <loot id="rockfish" p="12" difficulty="2" />
      <loot id="coral_cod" p="1" difficulty="3" />
      <loot id="fin" p="4" difficulty="4" />
      <loot id="carapace" p="1" difficulty="6" />
    </fishing>
    <init><runAreaLoad /></init>
    <onLoad>
      <run procedure="grass_planet1.onLoad"/>
      <music id="colony" seconds="1" />
    </onLoad>
  </area>
